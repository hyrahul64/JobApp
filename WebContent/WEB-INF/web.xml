<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>JobApp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>all-jobs</servlet-name>
    <servlet-class>com.rs.jobapp.ListJobs</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>all-jobs</servlet-name>
    <url-pattern>/all-jobs/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>job</servlet-name>
    <jsp-file>/update.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>job</servlet-name>
    <url-pattern>/job/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>error</servlet-name>
    <jsp-file>/error.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>error</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>update</servlet-name>
    <servlet-class>com.rs.jobapp.UpdateJob</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>update</servlet-name>
    <url-pattern>/update/*</url-pattern>
  </servlet-mapping>
</web-app>